<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Page d'accueil</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!---- Navbar -->
  <%- include('menu.ejs') %>

  <main class="container py-5">
    <h1>Films</h1>

    <!-- Display session info for debugging -->
    <% if (!session || !session.role) { %>
      <p><strong>Debug:</strong> Session role not set! Current session: <%= JSON.stringify(session) %></p>
    <% } %>

    <!-- Display messages from controller (like success notifications) -->
    <% if (msg && msg.length > 0) { %>
      <div class="alert alert-info">
        <% msg.forEach(m => { %>
          <p><%= m %></p>
        <% }) %>
      </div>
    <% } %>

    <!-- Display errors from controller -->
    <% if (erreurs && erreurs.length > 0) { %>
      <div class="alert alert-danger">
        <% erreurs.forEach(err => { %>
          <p><%= err %></p>
        <% }) %>
      </div>
    <% } %>

    <!-- Films Grid -->
    <% if (films && films.length > 0) { %>
      <div class="row">
        <% films.forEach(film => { %>
          <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
              <img src="/<%=film.image %>" class="card-img-top" alt="<%= film.titre %>">
              <div class="card-body">
                <h5 class="card-title"><%= film.titre %></h5>
                <p class="card-text"><%= film.description %></p>
                <p class="text-muted">Genre: <%= film.genre %></p>
                <p class="text-muted">Release: <%= film.dateSortie.toISOString().slice(0, 10) %></p>

                <!-- Add to Favorites for logged-in ABONNE users -->
                <% if (session && session.role === 'ABONNE') { %>
                  <form method="POST" action="/favorite/add">
                    <input type="hidden" name="filmId" value="<%= film.id %>">
                    <button type="submit" class="btn btn-success">Add to Favorites</button>
                  </form>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p>No films available at the moment.</p>
    <% } %>
  </main>

  <%- include('footer.ejs', { year: 2026 }) %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
