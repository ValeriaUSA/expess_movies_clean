<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Page d'accueil</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="css/style.css">
</head>

<body>
  <%- include('menu.ejs') %>
  <h1> This is the page to manage film list by admin</h1>
 

    
    <!-- Add New Button -->

<div class="mb-3">
  <a href="/film/new" class="btn btn-success">
    <i class="bi bi-plus-circle"></i> Add new Film
  </a>
</div>

<!-- Films section -->
  <div>
  <ul>
    <% films.forEach(f => { %>
      <li>
        <img src="/<%= f.image %>" alt="<%= f.titre %>" style="max-height:100px;">
        <%= f.titre %> - <%= f.genre %>
        <a href="film/delete/<%= f.id %>">Delete</a>
        <a href="film/update/<%= f.id %>">Update</a>
      </li>
    <% }) %>
  </ul>
</div>


  <%- include('footer.ejs', {year: 2026}) %>
</body>
