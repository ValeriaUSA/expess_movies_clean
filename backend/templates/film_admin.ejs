<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin - Manage Movies</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('menu.ejs') %>

  <div class="container py-5">
    <h1>Manage Movies</h1>

    <% if (msg && msg.length > 0) { %>
      <div class="alert alert-success">
        <% msg.forEach(m => { %><p><%= m %></p><% }) %>
      </div>
    <% } %>

    <% if (erreurs && erreurs.length > 0) { %>
      <div class="alert alert-danger">
        <% erreurs.forEach(err => { %><p><%= err %></p><% }) %>
      </div>
    <% } %>

    <!-- Add Movie Form -->
    <div class="card mb-4">
      <div class="card-header">Add New Film</div>
      <div class="card-body">
        <form action="/film/new" method="POST">
  <div class="mb-3">
    <label>Titre</label>
    <input type="text" name="titre" class="form-control" required>
  </div>
  <div class="mb-3">
    <label>Image URL</label>
    <input type="text" name="image" class="form-control">
  </div>
  <div class="mb-3">
    <label>Description</label>
    <textarea name="description" class="form-control"></textarea>
  </div>
  <div class="mb-3">
    <label>Date Sortie</label>
    <input type="date" name="dateSortie" class="form-control">
  </div>
  <div class="mb-3">
    <label>Genre</label>
    <input type="text" name="genre" class="form-control">
  </div>
  <button type="submit" class="btn btn-primary">Add Movie</button>
</form>
